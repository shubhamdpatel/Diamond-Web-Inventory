@{
    ViewBag.Title = "SaveImportProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row pt-2 pb-2">

        </div>
        <div class="row criteria">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header text-uppercase text-center">Impotr Product</div>
                    <div class="card-body">
                        @*<form id="ImportProductForm">*@
                        @using (Html.BeginForm("SaveImportProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group row">
                                <div class="col-sm-3 ">
                                    <label for="" class="col-form-label">Select EXCELFile(*.xls,xlsx) </label>
                                </div>

                                <div class="col-sm-5">
                                    <input type="file" name="UploadFile" class="form-control" /><br>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <input type="submit" name="Command" class="btn btn-success btn-sm" value="Upload Excel" />
                                </div>
                                <div>
                                    <strong>(<a href="/AdminContent/assets/SampleFile/StoneData.xls">Download Sample File</a>)</strong>

                                </div>
                            </div>


                        }
                        @*</form>*@
                    </div>
                </div>
            </div>
        </div><!--End Row-->
    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->
